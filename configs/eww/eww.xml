<eww>
  <definitions>
    <def name="weather">
      <box class="weather" orientation="v" valign="start" space-evenly="false">
        <box class="widget-title" orientation="h">
          WEATHER
        </box>

        <box orientation="h" style="padding-top: 8px;">
          <box class="icon weather-now-icon">
            
          </box>

          <box orientation="v" space-evenly="false">
            <box class="weather-now-location">
              {{weather-now-location}}
            </box>
            <box class="weather-now-temperature">
              {{weather-now-temperature}}
            </box>
          </box>
        </box>

        <box class="separator"> </box>

        <box orientation="h">
          <box orientation="v" space-evenly="false">
            <box class="weather-later-time">
              4PM
            </box>
            <box class="icon weather-later-icon">
              
            </box>
            <box class="weather-later-temperature">
              32°
            </box>
          </box>

          <box orientation="v" space-evenly="false">
            <box class="weather-later-time">
              6PM
            </box>
            <box class="icon weather-later-icon">
              
            </box>
            <box class="weather-later-temperature">
              30°
            </box>
          </box>

          <box orientation="v" space-evenly="false">
            <box class="weather-later-time">
              8PM
            </box>
            <box class="icon weather-later-icon" style="color: #fae8c5;">
              
            </box>
            <box class="weather-later-temperature">
              27°
            </box>
          </box>
        </box>

        <box class="separator" style="margin-bottom: 20px;"></box>

        <box orientation="h" space-evenly="false" spacing="20">
          <box orientation="v" space-evenly="false">
            <!-- The margin-left is only there because I can't figure out how -->
            <!-- to make text align left -->
            <box class="weather-following-day-date" width="150.0" style="margin-left: 2px;">
              Tomorrow
            </box>
            <!-- Same -->
            <box class="weather-following-day-date" width="150.0" style="margin-left: -7px;">
              Tuesday
            </box>
            <box class="weather-following-day-date" width="150.0">
              Wednesday
            </box>
          </box>

          <box orientation="v" space-evenly="false">
            <box class="icon weather-following-day-icon" style="margin-top: -13px; color: #fae8c5;">
              
            </box>
            <box class="icon weather-following-day-icon" style="color: #858d94;">
              
            </box>
            <box class="icon weather-following-day-icon" style="color: #6a85a1;">
              歹
            </box>
          </box>

          <box orientation="v" space-evenly="false">
            <box class="weather-following-day-temperature-min">
              23°
            </box>
            <box class="weather-following-day-temperature-min">
              21°
            </box>
            <box class="weather-following-day-temperature-min">
              19°
            </box>
          </box>

          <box orientation="v" space-evenly="false">
            <box class="weather-following-day-temperature-max">
              33°
            </box>
            <box class="weather-following-day-temperature-max">
              28°
            </box>
            <box class="weather-following-day-temperature-max">
              26°
            </box>
          </box>
        </box>
      </box>
    </def>
  </definitions>

  <variables>
    <script-var name="weather-now-location" interval="20m">
      echo "Milan, Italy"
    </script-var>

    <script-var name="weather-now-temperature" interval="20m">
      echo "31°"
    </script-var>
  </variables>

  <windows>
    <window name="sidebar" screen="0" focusable="true" windowtype="dock">
      <geometry x="80%" y="25px" width="20%" height="1055px"/>
      <widget>
        <weather/>
      </widget>
    </window>
  </windows>
</eww>
